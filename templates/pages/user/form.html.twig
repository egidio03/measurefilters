{% extends 'base.html.twig' %}

{% block title %}MeasureFilter - Gestione Utente{% endblock %}
{% block pagetitle %}Gestione Utente{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_row(form._token) }}
        <div class="row">
            <div class="col-md-2">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.surname) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.role) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.password) }}
            </div>
        </div>
        {{ form_row(form.submit) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>
{% endblock %}
